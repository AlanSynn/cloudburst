[report]
omit=
  # Omit all installed Python library files.
  *site-packages*
  # Omit everything in the test directory, as this artificially inflates
  # coverage.
  tests/*
exclude_lines =
  # Do not count these are uncovered lines, because they are always
  # boilerplate code.
  raise NotImplementedError
